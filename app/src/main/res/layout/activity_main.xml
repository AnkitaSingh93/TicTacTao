<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/ll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:visibility="visible">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:background="#283593"
            android:gravity="center_horizontal"
            android:paddingTop="20dp"
            android:paddingBottom="@dimen/dp_20"
            android:text="Tic-Tac-Toe"
            android:textColor="@color/white"
            android:textSize="@dimen/dp_40"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:src="@drawable/main" />

        <Button
            android:layout_marginTop="@dimen/dp_50"
            android:id="@+id/btn_one"
            android:layout_width="180dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:background="@drawable/shape_button"
            android:gravity="center"
            android:text="Single Player"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="@dimen/dp_18" />

        <Button
            android:id="@+id/btn_two"
            android:layout_width="180dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:background="@drawable/shape_button"
            android:gravity="center"
            android:text="Two Player"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="@dimen/dp_18" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:visibility="gone">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="@dimen/dp_20"
            android:gravity="center_horizontal"
            android:paddingTop="20dp"
            android:text="TicTacToe"
            android:textColor="@color/white"
            android:textSize="@dimen/dp_30" />

        <EditText
            android:id="@+id/et_player1"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_50"
            android:layout_margin="@dimen/dp_15"
            android:hint="Enter first player name"
            android:inputType="textCapWords" />

        <EditText
            android:id="@+id/et_player2"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_50"
            android:layout_margin="@dimen/dp_15"
            android:hint="Enter second player name"
            android:inputType="textCapWords" />

        <Button
            android:id="@+id/clickHere"
            android:layout_width="180dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            android:background="@drawable/shape_button"
            android:gravity="center"
            android:text="Click Here"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="@dimen/dp_18" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:visibility="gone">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:gravity="center_horizontal"
            android:paddingTop="20dp"
            android:paddingBottom="@dimen/dp_20"
            android:text="Choose symbol for playing"
            android:textColor="@color/c_brown"
            android:textStyle="italic"
            android:textSize="@dimen/dp_25" />

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_player1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="50dp"
                android:text="Player 1 "
                android:textColor="@color/player"
                android:textSize="@dimen/dp_24" />

            <RadioGroup
                android:id="@+id/player1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_margin="50dp">

                <RadioButton
                    android:buttonTint="@color/c_greyish"
                    android:textColor="#283593"
                    android:id="@+id/zero"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="true"
                    android:text="O"
                    android:textSize="@dimen/dp_40" />

                <RadioButton
                    android:buttonTint="@color/c_greyish"
                    android:textColor="#283593"
                    android:id="@+id/cross"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="X"
                    android:textSize="@dimen/dp_40" />
            </RadioGroup>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_player2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="50dp"
                android:text="Player 2 "
                android:textColor="@color/player"
                android:textSize="@dimen/dp_24" />

            <RadioGroup
                android:id="@+id/player2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_margin="50dp">

                <RadioButton
                    android:buttonTint="@color/c_greyish"
                    android:textColor="#283593"
                    android:id="@+id/zero1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="O"
                    android:textSize="@dimen/dp_40" />

                <RadioButton
                    android:buttonTint="@color/c_greyish"
                    android:textColor="#283593"
                    android:id="@+id/cross1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="true"
                    android:text="X"
                    android:textSize="@dimen/dp_40" />
            </RadioGroup>
        </RelativeLayout>

        <Button
            android:id="@+id/play"
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:background="@drawable/shape_button"
            android:gravity="center"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text="Play"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="@dimen/dp_18" />
    </LinearLayout>
</LinearLayout>